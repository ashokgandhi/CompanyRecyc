<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/linear1"
    android:weightSum="2">

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/_4sdp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/company1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_toRightOf="@+id/img"
            android:text="Silverwing Technologies"
            android:textColor="#000000"
            android:layout_marginLeft="@dimen/_4sdp"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/aboutus1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/details"
            android:layout_below="@+id/company1"
            android:layout_toRightOf="@+id/img"
            android:layout_marginLeft="@dimen/_4sdp"
            android:hint="uhyuh"/>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp">


        <android.support.v7.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:elevation="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:padding="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            app:cardBackgroundColor="#E7E4E4">

            <RelativeLayout
                android:id="@+id/relative3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Skill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skills :"
                    android:textColor="#000000"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:drawablePadding="@dimen/_10sdp"
                    android:drawableLeft="@drawable/education"
                    android:layout_marginLeft="@dimen/_9sdp"
                    android:textSize="@dimen/_10sdp"/>

                <TextView
                    android:id="@+id/experience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Android  Java  PHP"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/Skill"
                    android:textSize="@dimen/_10sdp"/>


                <TextView
                    android:id="@+id/JobType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Skill"
                    android:textColor="#000000"
                    android:drawablePadding="@dimen/_7sdp"
                    android:text="Job Type :"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_9sdp"
                    android:drawableLeft="@drawable/eligibility"
                    android:textSize="@dimen/_10sdp"/>


                <TextView
                    android:id="@+id/subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/experience"
                    android:layout_toRightOf="@+id/JobType"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Part Time , Full Time"
                    android:paddingLeft="@dimen/_10sdp" />


                <TextView
                    android:id="@+id/Salary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/JobType"
                    android:textColor="#000000"
                    android:drawablePadding="@dimen/_13sdp"
                    android:text="Salary :"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:drawableLeft="@drawable/indian"
                    android:textSize="@dimen/_10sdp"/>


                <TextView
                    android:id="@+id/Currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/subject"
                    android:layout_toRightOf="@+id/JobType"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="₹25000 To ₹30000 "
                    android:paddingLeft="@dimen/_10sdp" />
            </RelativeLayout>

                </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/button1"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardview"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_rounded_green"
            android:padding="@dimen/_5sdp"
            android:text="Apply"
            android:textColor="#ffffff" />






            </RelativeLayout>


</LinearLayout>